<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_navigation_header"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        tools:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_navigation_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_navigation_header"
        android:layout_alignBottom="@id/image_navigation_header"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:lines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="伏見桃山の城地を繞めぐっている淀川の水" />

    <net.numa08.gochisou.presentation.widget.CustomSymbolButton
        android:id="@+id/button_posts"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/image_navigation_header"
        android:layout_alignStart="@id/image_navigation_header"
        android:gravity="center"
        android:text="list"
        android:textSize="32sp"
        android:textColor="@color/textTertiary"
        android:background="?attr/listChoiceBackgroundIndicator"
        app:symbol="fonts/LigatureSymbols-2.11.ttf"
        tools:text="O"
        tools:ignore="HardcodedText,MissingPrefix" />

    <net.numa08.gochisou.presentation.widget.CustomSymbolButton
        android:id="@+id/button_users"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_toEndOf="@id/button_posts"
        android:layout_alignTop="@id/button_posts"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="users"
        android:textSize="32sp"
        android:textColor="@color/textTertiary"
        android:background="?attr/listChoiceBackgroundIndicator"
        app:symbol="fonts/LigatureSymbols-2.11.ttf"
        tools:text="O"
        tools:ignore="HardcodedText,MissingPrefix" />

</merge>